task main() {
    byte handle;
    string s1 = "this", s2 = " and that", s3, sx, sxb;
    int s, fsize, sr;

    sx = StrCat(s1, s2);
    StrToByteArray(sx, sxb);
    sr = StrLen(sx);

    // write stuffs
    CreateFile("stuff.txt", 24,handle);
    s = StrLen(s1);
    WriteBytes(handle, s1, s);
    CloseFile(handle);

    OpenFileAppend("stuff.txt", fsize, handle);
    s = StrLen(s2);
    WriteBytes(handle, s2, s);
    CloseFile(handle);

    OpenFileRead("stuff.txt", fsize, handle);
    ReadBytes(handle, sr, s3);
    CloseFile(handle);

    if (s3 == sxb) {
        CreateFile("stuff2.txt",24,handle);
        WriteLn(handle, 42);
        CloseFile(handle);
    }
}